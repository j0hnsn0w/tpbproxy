RewriteEngine on
RewriteRule ^([^/\.]+)?$ index.php?x=/$1 [L]
RewriteRule ^([^/\.]+)/([^/]+)?$ index.php?x=/$1/$2 [L]
RewriteRule ^([^/\.]+)/([^/]+)/([^/]+)?$ index.php?x=/$1/$2/$3 [L]
RewriteRule ^([^/\.]+)/([^/]+)/([^/]+)/([^/]+)?$ index.php?x=/$1/$2/$3/$4 [L]
RewriteRule ^([^/\.]+)/([^/]+)/([^/]+)/([^/]+)/([^/]+)?$ index.php?x=/$1/$2/$3/$4/$5 [L]
RewriteRule ^([^/\.]+)/([^/]+)/([^/]+)/([^/]+)/([^/]+)/([^/]+)?$ index.php?x=/$1/$2/$3/$4/$5/$6 [L]